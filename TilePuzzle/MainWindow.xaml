<Window x:Class="TilePuzzle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TilePuzzle"
        mc:Ignorable="d"
        Title="MainWindow" Height="555" Width="509">
    <Grid>
        <Menu x:Name="menu" HorizontalAlignment="Left" Height="22" VerticalAlignment="Top" Width="517">
            <MenuItem Height="22" Width="31" Header="File">
                <MenuItem Header="Open Image" Click="MenuItem_Click_1"></MenuItem>
                <MenuItem Header="Reset" Click="MenuItem_Click_2"></MenuItem>
                <MenuItem Header="Shuffle" Click="MenuItem_Click_3"></MenuItem>
                <MenuItem Header="Exit" Click="MenuItem_Click"></MenuItem>
            </MenuItem>
        </Menu>
        <Canvas HorizontalAlignment="Left" Height="500" Margin="0,22,0,0" VerticalAlignment="Top" Width="500" x:Name="Board"/>
    </Grid>
</Window>
